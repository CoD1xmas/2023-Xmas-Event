//Draws a blood 'puff' 


Particle
{
	name				bloodpuff

	flags				usePhysics impactKills useAlpha

	spawnFlags			axisFromSphere

	count				5 7

	life				400 600

	cullrange			1000

	radius				4 8

	rotation			360 -360

	rotationDelta		21 43

	velocity			100 75 57 25 -100 -50

	gravity				-400

	rgb
	{
		start			0.5 0.1 0.1
		end			0.7 0.1 0.1
		flags			linear
	}

	alpha
	{
		end				0
		flags			linear
	}

	size
	{
		start				2 
		end				17 25
		flags				linear
	}

	shaders
	[
		gfx/impact/flesh_hit1
		gfx/impact/blood_splat
		gfx/impact/blood_splat3
	]
}



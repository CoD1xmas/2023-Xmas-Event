//Draw a couple of blood particles , when they hit they will cause a 
//stain to appear

Particle
{
	flags				usePhysics useAlpha impactFX impactKills 

	spawnFlags			orgOnSphere axisFromCylinder

	count				7 9 
	
	delay 			15

	life				900 1100

	radius				4 8

	cullrange			1000

	rotation			128 -256

	rotationDelta		43 -86

	velocity			100 75 57 25 -100 -50
	
	gravity				-400

	rgb
	{
		start			0.6 0.1 0.1
		end			0.5 0.1 0.1
		flags			random linear
	}

	alpha
	{
		start				1
		end				1
		flags			linear
	}

	size
	{
		start				1
		end				3
		flags			random linear 
	}

	shaders
	[
		gfx/impact/blood_splat
		gfx/impact/blood_splat3

	]
	
	impactFX
	[
		fx/impacts/bloodfx_lg
		fx/impacts/bloodfx
		fx/impacts/bloodfx_giant
	]
	

}

//Draw the blood gibs and make them stay on the ground about 10 seconds.
//When they bounce or slide down a  surface, it will leave a 'trail'

Emitter
{
	flags				usePhysics impactFX useModel
	
	spawnFlags			orgOnSphere axisfromCylinder

	count				 2 4
	
	bounce			.3  .4

	life				25000

	angleDelta			0 0 0 -360 -360 -360
	
	rotation			360 -360

	velocity			175 150 150 -175 -150 -150

	gravity			-500
	
	size
	{
		start 	.3 .5

	}

	models
	[
 		xmodel/blood_chunks

		
	]

	impactfx
	[
	 fx/impacts/bloodfx_lg	
	 fx/impacts/bloodfx
	 fx/impacts/bloodfx_giant
	]
}

